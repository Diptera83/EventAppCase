@{
}

@model IEnumerable<Event>

    <h3>Geçerli Etkinlikler:</h3>
    <br />
    <a href="/Event/CreateEvent" class="btn btn-primary">Yeni Etkinlik Ekle</a>

    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Etkinlik Adı:</th>
                <th>Etkinlik Tarihi:</th>
                <th>Adres:</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var myEvent in Model)
            {
                <tr>
                    <td>@myEvent.EventName</td>
                    <td>@myEvent.EventDate</td>
                    <td>@myEvent.EventLocation</td>
                    <td>
                        <a asp-controller="Event" asp-action="EventDetail" asp-route-id="@myEvent.EventId" class="btn btn-sm btn-primary">Etkinlik Detayı</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
